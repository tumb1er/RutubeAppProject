<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NewApi">

    <style name="MediaController_Container">
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>

    <style name="MediaController_SeekBar">
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:progressDrawable">@drawable/mediacontroller_seekbar</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_thumb</item>
    </style>

    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Переопределение ссылок на стили в теме -->
    <style name="Theme.Rutube" parent="Theme.Rutube.Base">
        <item name="actionBarStyle">@style/Rutube.ActionBarStyle</item>
        <item name="android:actionBarStyle">@style/Rutube.ActionBarStyle</item>
        <item name="actionBarTabBarStyle">@style/Rutube.TabBar</item>
        <item name="android:actionBarTabBarStyle">@style/Rutube.TabBar</item>
        <item name="actionBarTabStyle">@style/Rutube.TabView</item>
        <item name="android:actionBarTabStyle">@style/Widget.Sherlock.ActionBar.TabView</item>
        <item name="actionBarTabTextStyle">@style/Rutube.TabText</item>
        <item name="android:actionBarTabTextStyle">@style/Rutube.TabText</item>

    </style>

    <style name="Theme.Rutube.Base" parent="Theme.Sherlock.Light">
        <!-- иконка поиска в элементе поиска -->
        <item name="searchViewSearchIcon">@drawable/ic_action_search</item>
        <!-- иконка приложения (не лого) -->
        <item name="rutubeAppIcon">@drawable/logo_cut</item>

        <!-- иконка HomeAsUp при активном поле поиска-->
        <item name="icon">?attr/rutubeAppIcon</item>
        <item name="android:icon">?attr/rutubeAppIcon</item>

    </style>

    <style name="Rutube.ActionBarStyle" parent="Widget.Sherlock.Light.ActionBar.Solid">
        <!-- Фон ActionBar -->
        <item name="background">@drawable/action_bar</item>
        <item name="android:background">@drawable/action_bar</item>
        <!-- не показывать Title -->
        <item name="displayOptions">useLogo|showHome</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <style name="Rutube.TabBar" parent="Widget.Sherlock.ActionBar.TabBar">
        <!-- Фон заголовков вкладок -->
        <item name="background">@drawable/tab_bar_background</item>
        <item name="android:background">@drawable/tab_bar_background</item>
        <!--<item name="background">@color/tab_bar_background</item>-->
        <!--<item name="android:background">@color/tab_bar_background</item>-->
        <!-- разделитель табов -->
        <item name="divider">@color/action_bar_divider</item>
        <item name="android:divider">@color/action_bar_divider</item>
        <!--<item name="actionBarDivider">@color/action_bar_divider</item>-->
        <!--<item name="android:actionBarDivider">@color/action_bar_divider</item>-->
    </style>

    <style name="Rutube.TabView" parent="Widget.Sherlock.ActionBar.TabView">
    </style>

    <style name="Rutube.TabText" parent="Widget.Sherlock.ActionBar.TabText">
        <item name="android:textColor">@color/tab_text</item>
    </style>

    <!-- Тема для лент в новом окне -->
    <style name="Theme.Rutube.Feed" parent="Theme.Rutube">
        <item name="logo">@drawable/logo_cut</item>
        <item name="android:logo">@drawable/logo_cut</item>
        <item name="actionBarStyle">@style/Rutube.Feed.ActionBarStyle</item>
        <item name="android:actionBarStyle">@style/Rutube.Feed.ActionBarStyle</item>
    </style>

    <style name="Rutube.Feed.ActionBarStyle" parent="Rutube.ActionBarStyle">
        <!-- показывать Title -->
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
    </style>
</resources>