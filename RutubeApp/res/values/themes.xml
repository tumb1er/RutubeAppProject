        <item name="VideoInfoBulletStyle">@style/Rutube.Player.Info.Bullet</item>
        <item name="VideoInfoMoreButtonStyle">@style/Rutube.Player.Info.MoreButton</item>
        <item name="VideoInfoAuthorStyle">@style/Rutube.Player.Info.Author</item>
        <item name="VideoInfoDescriptionStyle">@style/Rutube.Player.Info.Description</item>
        <item name="VideoInfoTagsListStyle">@style/Rutube.Player.Info.TagsList</item>

        <item name="VideoInfoScrollerStyle">@style/Rutube.Player.Info.ScrollContainer</item>
    </style>
    <style name="Theme.Rutube.CustomTabs" parent="@style/Theme.Rutube.Feed">
        <item name="vpiTabPageIndicatorStyle">@style/Rutube.TabView.Custom</item>
    </style>

</resources>