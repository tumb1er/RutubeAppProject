<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"  tools:ignore="NewApi">

    <style name="Theme.Rutube.SplashScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="Theme.Rutube.Base" parent="Theme.AppCompat.Light">
        <!-- иконка поиска в элементе поиска -->
        <item name="searchViewSearchIcon">@drawable/ic_action_search</item>
        <!-- иконка приложения (не лого) -->
        <item name="rutubeAppIcon">@drawable/logo_cut</item>
        <!-- фон для кнопки "домой" -->
        <item name="actionBarItemBackground">@drawable/home_widget_background</item>
        <!-- иконка HomeAsUp при активном поле поиска-->
        <item name="icon">?attr/rutubeAppIcon</item>
        <item name="android:icon">?attr/rutubeAppIcon</item>
        <item name="logo">@drawable/logo</item>
        <item name="android:logo">@drawable/logo</item>

    </style>

    <!-- StartActivity -->
    <style name="Theme.Rutube" parent="Theme.Rutube.Base">
        <!-- Ссылки на стили для ActionBarSherlock -->
        <item name="actionBarStyle">@style/Rutube.ActionBarStyle</item>
        <item name="android:actionBarStyle">@style/Rutube.ActionBarStyle</item>
        <item name="actionBarTabBarStyle">@style/Rutube.TabBar</item>
        <item name="android:actionBarTabBarStyle">@style/Rutube.TabBar</item>
        <item name="actionBarTabStyle">@style/Rutube.TabView</item>
        <item name="android:actionBarTabStyle">@style/Rutube.TabView</item>
        <item name="actionBarTabTextStyle">@style/Rutube.TabText</item>
        <item name="android:actionBarTabTextStyle">@style/Rutube.TabText</item>

        <!-- Обязательные ссылки на стили для лент -->
        <item name="FeedListStyle">@style/Rutube.Feed.List</item>
        <item name="FeedContainerStyle">@style/Rutube.Feed.Container.Custom</item>
        <item name="FeedDurationStyle">@style/Rutube.Feed.Duration</item>
        <item name="FeedTitleStyle">@style/Rutube.Feed.Title</item>
        <item name="FeedDescriptionStyle">@style/Rutube.Feed.Description</item>
        <item name="FeedThumbnailStyle">@style/Rutube.Feed.Thumbnail</item>
        <item name="FeedCardStyle">@style/Rutube.Feed.Card</item>
        <item name="FeedCreatedStyle">@style/Rutube.Feed.Created</item>
        <item name="FeedAvatarStyle">@style/Rutube.Feed.Avatar</item>
        <item name="FeedAuthorStyle">@style/Rutube.Feed.Author</item>
        <item name="FeedFooterStyle">@style/Rutube.Feed.Footer</item>
        <item name="FeedHorizontalLineStyle">@style/Rutube.Feed.Line</item>
        <item name="FeedTagListStyle">@style/Rutube.Feed.TagList</item>
        <item name="FeedTagStyle">@style/Rutube.Feed.Tag</item>
        <item name="FeedTagTitleStyle">@style/Rutube.Feed.TagTitle</item>
        <item name="FeedTagCommentStyle">@style/Rutube.Feed.TagComment</item>
        <item name="FeedLoaderStyle">@style/Rutube.Feed.Loader</item>
        <item name="FeedRefreshButtonStyle">@style/Rutube.Feed.RefreshButton</item>

        <item name="LoginClearButtonStyle">@style/Rutube.Login.ClearButton</item>
        <item name="LoginLoginTextEditStyle">@style/Rutube.Login.LoginEditText</item>
        <item name="LoginPasswordTextEditStyle">@style/Rutube.Login.PasswordEditText</item>
        <item name="LoginRemindLinkStyle">@style/Rutube.Login.Link.Remind</item>
        <item name="LoginRegistrationLinkStyle">@style/Rutube.Login.Link.Registration</item>

    </style>

    <!-- FeedActivity -->
    <style name="Theme.Rutube.Feed" parent="Theme.Rutube">
        <item name="logo">@drawable/logo_cut</item>
        <item name="android:logo">@drawable/logo_cut</item>
        <item name="actionBarStyle">@style/Rutube.Feed.ActionBarStyle</item>
        <item name="android:actionBarStyle">@style/Rutube.Feed.ActionBarStyle</item>
    </style>

    <!-- RutubeVideoPageActivity -->
    <style name="Theme.Rutube.Video" parent="Theme.Player">
        <item name="FeedTitleStyle">@style/Rutube.Feed.Title</item>
        <item name="FeedAuthorStyle">@style/Rutube.Feed.Author</item>
        <item name="FeedContainerStyle">@style/Rutube.Feed.Container.Custom</item>

        <item name="RelatedContainerStyle">@style/Rutube.Feed.Related.Container</item>
        <item name="RelatedCardStyle">@style/Rutube.Feed.Related.Card</item>
        <item name="RelatedStubStyle">@style/Rutube.Feed.Related.Stub</item>
        <item name="RelatedThumbnailStyle">@style/Rutube.Feed.Related.Thumbnail</item>
        <item name="RelatedTitleStyle">@style/Rutube.Feed.Related.Title</item>
        <item name="RelatedHitsStyle">@style/Rutube.Feed.Related.Hits</item>
        <item name="RelatedAuthorStyle">@style/Rutube.Feed.Related.Author</item>

        <item name="VideoInfoContainerStyle">@style/Rutube.Player.Info.Container</item>
        <item name="VideoInfoMainBlockStyle">@style/Rutube.Player.Info.MainBlock</item>
        <item name="VideoInfoTitleStyle">@style/Rutube.Player.Info.Title</item>
        <item name="VideoInfoCreatedStyle">@style/Rutube.Player.Info.Text</item>
