<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/feed_background"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/card_background"
        android:id="@+id/card"
        android:padding="6dp"
        android:paddingLeft="10dp">

        <View
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@drawable/thumbnail_stub"
            android:layout_alignRight="@+id/thumbnailImageView"
            android:layout_alignLeft="@+id/thumbnailImageView"
            android:layout_alignTop="@+id/thumbnailImageView"
            android:layout_alignBottom="@+id/thumbnailImageView" />

        <!-- Тамнейл -->
        <ru.rutube.RutubeFeed.views.ThumbnailView
            android:id="@+id/thumbnailImageView"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:contentDescription="@string/thumbnail"
            android:scaleType="centerCrop" />

        <!-- скругленные углы -->
        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignRight="@+id/thumbnailImageView"
            android:layout_alignLeft="@+id/thumbnailImageView"
            android:layout_alignTop="@+id/thumbnailImageView"
            android:layout_alignBottom="@+id/thumbnailImageView"
            android:background="@drawable/thumbnail_rc" />

        <!-- Название ролика-->
        <!--style="?attr/RelatedTitleStyle"-->

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/thumbnailImageView"
            android:maxLines="2"
            android:textSize="14dp"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:textColor="#FF6C6C6C" />

        <!-- Количество просмотров -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100500"
            android:id="@+id/hitsTextView"
            android:layout_toRightOf="@+id/thumbnailImageView"
            android:layout_below="@+id/titleTextView"
            android:paddingLeft="10dp"
            android:textColor="#FFA9A9A9" />

        <!-- Имя автора справа от аватара -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:id="@+id/authorTextView"
            style="?attr/FeedAuthorStyle"
            android:layout_toRightOf="@+id/thumbnailImageView"
            android:layout_below="@+id/hitsTextView"
            android:paddingLeft="10dp" />


    </RelativeLayout>
</FrameLayout>