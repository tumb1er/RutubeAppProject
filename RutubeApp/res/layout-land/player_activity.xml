<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >

            <fragment
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:name="ru.rutube.RutubePlayer.ui.PlayerFragment"
                android:id="@+id/player_fragment"
                android:layout_gravity="center"
                tools:layout="@layout/player_fragment" />

            <fragment
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:name="ru.rutube.RutubePlayer.ui.EndscreenFragment"
                android:id="@+id/endscreen_fragment"
                android:visibility="gone"
                android:layout_gravity="center"
                tools:layout="@layout/endscreen_fragment"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@color/video_background"
            android:padding="10dp"
            android:focusableInTouchMode="true"
            android:id="@+id/video_info_container">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Video Title"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#FF000000"
                android:id="@+id/video_title" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/video_title"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/author_name"
                    android:text="author name"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:linksClickable="true"
                    android:autoLink="web" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/duration"
                    android:baselineAlignBottom="false" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/duration"
                    android:text="00:00"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/views"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hits"
                    android:text="100500"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"/>
                </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/related_video_container"
        class="ru.rutube.RutubeFeed.ui.RelatedFeedFragment"
        android:name="ru.rutube.RutubeFeed.ui.RelatedFeedFragment"
        android:layout_weight="1"
        />
</LinearLayout>