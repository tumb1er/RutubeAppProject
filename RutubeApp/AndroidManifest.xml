            android:name="ru.rutube.RutubeAPI.content.FeedContentProvider"
            android:authorities="ru.rutube.RutubeAPI.content.FeedContentProvider"
            />
        <provider
                android:authorities="ru.rutube.RutubeFeed.content.SearchSuggestProvider"
