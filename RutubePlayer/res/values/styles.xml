<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <style name="Widget">
    </style>

    <style name="Player.__Theme" parent="Theme.AppCompat.Light">
    </style>

    <style name="Theme.Player" parent="Player.__Theme">
        <item name="android:windowNoTitle">true</item>

        <item name="MediaControllerStyle">@style/Player.MediaController</item>
        <item name="InfoPanelStyle">@style/Player.MediaController.InfoPanel</item>
        <item name="VideoTitleStyle">@style/Player.MediaController.VideoTitle</item>
        <item name="MenuButtonStyle">@style/Player.MediaController.MenuButton</item>
        <item name="ShareButtonStyle">@style/Player.MediaController.ShareButton</item>
        <item name="QualityButtonStyle">@style/Player.MediaController.QualityButton</item>
        <item name="ControlPanelStyle">@style/Player.MediaController.ControlPanel</item>
        <item name="PlayButtonStyle">@style/Player.MediaController.PlayButton</item>
        <item name="TimeTextStyle">@style/Player.MediaController.TimeText</item>
        <item name="SeekBarStyle">@style/Player.MediaController.ProgressBar</item>
        <item name="FullscreenButtonStyle">@style/Player.MediaController.FullscreenButton</item>
        <item name="PlayerLoaderStyle">@style/Player.Loader</item>
        <item name="PlayerVolumeStyle">@style/Player.Volume</item>
        <item name="EndscreenContainerStyle">@style/Player.Endscreen.Container</item>
        <item name="EndscreenShareButtonStyle">@style/Player.Endscreen.Button.Share</item>
        <item name="EndscreenReplayButtonStyle">@style/Player.Endscreen.Button.Replay</item>

        <item name="SeekBarThumbDrawable">@drawable/seekbar_circle</item>
        <item name="SeekBarDrawable">@drawable/seekbar_progress</item>

    </style>

    <style name="Player.MediaController" parent="Widget">
        <item name="android:background">@drawable/fader_bg</item>
    </style>

    <style name="Player.MediaController.InfoPanel" parent="Widget">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>


    <style name="Player.MediaController.TextStyle" parent="Widget">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Player.MediaController.VideoTitle" parent="Player.MediaController.TextStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingTop">1dp</item>
    </style>

    <style name="Player.MediaController.MenuButton" parent="Widget">
        <item name="android:layout_gravity">right|top</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="Player.MediaController.ShareButton" parent="Widget">
        <item name="android:layout_gravity">right|top</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:src">@drawable/ic_action_share</item>
    </style>
    <style name="Player.MediaController.QualityButton" parent="Widget">
        <item name="android:layout_gravity">right|top</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Player.MediaController.ControlPanel" parent="Widget">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="Player.MediaController.PlayButton" parent="Widget">
        <item name="android:background">@color/transparent</item>
        <item name="android:src">@drawable/mediacontroller_pause_btn</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="Player.MediaController.FullscreenButton" parent="Widget">
        <item name="android:background">@color/transparent</item>
        <item name="android:src">@drawable/fullscreen_btn</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="Player.MediaController.TimeText" parent="Player.MediaController.TextStyle">
        <item name="android:layout_centerVertical">true</item>
        <!--<item name="android:textSize">10sp</item>-->
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="Player.MediaController.ProgressBar" parent="Widget">
        <item name="android:focusable">true</item>
        <item name="android:max">1000</item>
        <item name="android:progressDrawable">?attr/SeekBarDrawable</item>
        <item name="android:thumb">?attr/SeekBarThumbDrawable</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <style name="Player.Loader" parent="Widget">
        <item name="android:progressDrawable">@anim/loader</item>
        <item name="android:indeterminateDrawable">@anim/loader</item>
    </style>

    <style name="Player.Endscreen.Container" parent="Widget">
        <item name="android:background">@color/endscreen_shade</item>
    </style>

    <style name="Player.Endscreen.Button" parent="Widget">
        <item name="android:textColor">@color/endscreen_button_text</item>
        <item name="android:minWidth">@dimen/min_endscreen_button_width</item>
    </style>

    <style name="Player.Endscreen.Button.Share">
        <item name="android:drawableLeft">@drawable/ic_action_share</item>
    </style>

    <style name="Player.Endscreen.Button.Replay">
        <item name="android:drawableLeft">@drawable/ic_action_replay</item>
    </style>

    <style name="Player.Volume" parent="Widget">
        <item name="android:layout_marginLeft">20dp</item>
    </style>

</resources>