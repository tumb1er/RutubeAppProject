<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediaController_Container">
        <item name="android:background">@color/transparent</item>
        <!--<item name="android:paddingTop">4dip</item>-->
        <!--<item name="android:paddingBottom">8dip</item>-->
        <!--<item name="android:paddingLeft">8dip</item>-->
        <!--<item name="android:paddingRight">8dip</item>-->
    </style>

    <style name="Widget">
    </style>

    <style name="MediaController.__Theme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
    </style>

    <style name="Theme.MediaController" parent="MediaController.__Theme">
        <item name="MediaControllerStyle">@style/MediaController</item>
        <item name="InfoPanelStyle">@style/MediaController.InfoPanel</item>
        <item name="VideoTitleStyle">@style/MediaController.VideoTitle</item>
        <item name="MenuButtonStyle">@style/MediaController.MenuButton</item>
        <item name="ControlPanelStyle">@style/MediaController.ControlPanel</item>
    </style>

    <style name="MediaController" parent="Widget">
        <item name="android:background">@drawable/fader_bg</item>
    </style>

    <style name="MediaController.InfoPanel" parent="Widget">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>


    <style name="MediaController.TextStyle" parent="Widget">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MediaController.VideoTitle" parent="MediaController.TextStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingTop">1dp</item>
    </style>

    <style name="MediaController.MenuButton" parent="Widget">
        <item name="android:layout_gravity">right|top</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="MediaController.ControlPanel" parent="Widget">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <!--<item name="android:paddingBottom">20dp</item>-->
    </style>

</resources>