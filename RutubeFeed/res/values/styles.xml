<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Rutube"/>
    <style name="Rutube.Feed"/>
    <style name="Widget"/>

    <style name="Rutube.Feed.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Rutube.Feed.LightText">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Rutube.Feed.Container" parent="Widget">
        <!-- стиль фрагмента с лентой -->
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:background">@color/feed_background</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@color/feed_background</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="Rutube.Feed.List" parent="Widget">
        <!-- стиль списка карточек -->
        <item name="android:paddingTop">@dimen/card_padding_2x</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@color/feed_background</item>
    </style>

    <style name="Rutube.Feed.Duration" parent="Rutube.Feed.LightText">
        <!-- стиль плашки с длительностью -->
        <item name="android:textColor">@color/duration_color</item>
        <item name="android:background">@drawable/duration</item>
        <!--<item name="android:layout_marginRight">13dp</item>-->
        <!--<item name="android:layout_marginBottom">10dp</item>-->
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="Rutube.Feed.Thumbnail" parent="Widget">
        <item name="android:src">@drawable/stub</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:layout_marginLeft">-1dp</item>
        <item name="android:layout_marginRight">-1dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Rutube.Feed.Card" parent="Widget">
        <item name="android:background">@drawable/card_shadow</item>
    </style>

    <style name="Rutube.Feed.Title" parent="Rutube.Feed.Text">
        <item name="android:textColor">@color/video_title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">@dimen/title_padding_top</item>
        <item name="android:paddingLeft">@dimen/card_inner_padding</item>
        <item name="android:paddingRight">@dimen/card_inner_padding</item>
        <item name="android:paddingBottom">@dimen/title_padding_bottom</item>
    </style>

    <style name="Rutube.Feed.Created" parent="Rutube.Feed.LightText">
        <item name="android:textColor">@color/created</item>
        <item name="android:paddingTop">@dimen/footer_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/footer_text_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/card_inner_padding</item>
        <item name="android:paddingRight">@dimen/card_inner_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Rutube.Feed.Avatar" parent="Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/avatar</item>
        <item name="android:minHeight">@dimen/avatar</item>
        <item name="android:maxHeight">@dimen/avatar</item>
        <item name="android:maxWidth">@dimen/avatar</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/stub</item>
        <item name="android:paddingLeft">@dimen/card_inner_padding</item>
        <item name="android:paddingTop">@dimen/footer_inner_padding</item>
        <item name="android:paddingBottom">@dimen/footer_inner_padding</item>
    </style>

    <style name="Rutube.Feed.Author" parent="Rutube.Feed.LightText">
        <item name="android:textColor">@color/author</item>
        <item name="android:paddingTop">@dimen/footer_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/footer_text_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/card_inner_padding</item>
        <item name="android:paddingRight">@dimen/card_inner_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Rutube.Feed.Description" parent="Rutube.Feed.LightText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/description</item>
        <item name="android:paddingLeft">@dimen/card_inner_padding</item>
        <item name="android:paddingRight">@dimen/card_inner_padding</item>
        <item name="android:paddingBottom">@dimen/description_padding_bottom</item>
    </style>

    <style name="Rutube.Feed.Footer" parent="Widget" >
        <item name="android:background">@color/footer_background</item>
        <item name="android:paddingBottom">@dimen/footer_padding_bottom</item>
    </style>
    <style name="Rutube.Feed.Line" parent="Widget">
    </style>

    <style name="Rutube.Feed.TagList" parent="Widget">
        <item name="android:paddingTop">@dimen/tag_list_padding_top</item>
        <item name="android:paddingBottom">@dimen/tag_list_padding_bottom</item>
    </style>

    <style name="Rutube.Feed.Tag" parent="Widget">
        <item name="android:background">@color/footer_background</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Rutube.Feed.TagTitle" parent="Rutube.Feed.Text">
        <item name="android:textColor">@color/tag_title</item>
        <item name="android:background">@color/footer_background</item>
        <item name="android:paddingLeft">@dimen/card_inner_padding</item>
        <item name="android:paddingRight">@dimen/card_inner_padding</item>
    </style>

    <style name="Rutube.Feed.TagComment" parent="Rutube.Feed.LightText">
        <item name="android:textColor">@color/description</item>
        <item name="android:background">@color/footer_background</item>
        <item name="android:paddingLeft">@dimen/tag_comment_padding_left</item>
        <item name="android:paddingRight">@dimen/card_inner_padding</item>
    </style>

    <style name="Rutube.Feed.RefreshButton">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:contentDescription">@string/refresh</item>
    </style>


</resources>