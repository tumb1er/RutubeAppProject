<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Rutube"/>
    <style name="Rutube.Feed"/>

    <style name="Rutube.Feed.Text">
        <item name="android:textSize">16dp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Rutube.Feed.Container" parent="Widget">
        <!-- стиль фрагмента с лентой -->
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:background">@color/feed_background</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@color/feed_background</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="Rutube.Feed.List" parent="Widget">
        <!-- стиль списка карточек -->
        <item name="android:paddingTop">@dimen/card_padding_2x</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@color/feed_background</item>
    </style>

    <style name="Rutube.Feed.Duration" parent="Rutube.Feed.Text">
        <!-- стиль плашки с длительностью -->
        <item name="android:textColor">@color/duration_color</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background">@color/duration_background</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="Rutube.Feed.Thumbnail" parent="Widget">
        <item name="android:src">@drawable/stub</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:layout_marginLeft">-1dp</item>
        <item name="android:layout_marginRight">-1dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Rutube.Feed.Card" parent="Widget">
        <item name="android:background">@drawable/card_shadow</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Rutube.Feed.Title" parent="Rutube.Feed.Text">
        <item name="android:textColor">@color/video_title</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Rutube.Feed.Created" parent="Rutube.Feed.Text">
        <item name="android:textColor">@color/created</item>
    </style>

    <style name="Rutube.Feed.Avatar" parent="Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/avatar</item>
        <item name="android:minHeight">@dimen/avatar</item>
        <item name="android:maxHeight">@dimen/avatar</item>
        <item name="android:maxWidth">@dimen/avatar</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/stub</item>
    </style>

    <style name="Rutube.Feed.Author" parent="Rutube.Feed.Text">
        <item name="android:textColor">@color/author</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="Rutube.Feed.Description" parent="Rutube.Feed.Text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/description</item>
    </style>

    <style name="Rutube.Feed.Footer" parent="Widget" >
    </style>
    <style name="Rutube.Feed.Line" parent="Widget">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>